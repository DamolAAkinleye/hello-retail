{
  "$schema": "http://json-schema.org/schema#",
  "self": {
    "vendor": "com.nordstrom",
    "name": "product/create",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "schema":  { "type": "string", "format": "url" },
    "id": { "type": "string", "pattern": "^[\\w]{1,64}$" },
    "brand":  { "type": "string", "pattern": "^[\\w]{1,256}$" },
    "name":  { "type": "string", "pattern": "^[\\w]{1,256}$" },
    "description": { "type": "string", "pattern": "^[\\w]{1,1024}$" },
    "category": { "type": "string", "pattern": "^[\\w]{1,256}$" }
  },
  "required": [
    "schema",
    "id",
    "brand",
    "name",
    "description",
    "category"
  ],
  "additionalProperties": false
}
